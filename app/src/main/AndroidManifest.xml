<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uklid.com.friends" >
    
    <permission android:name="uklid.com.friends.provider.READWRITE"/>//
    <uses-permission android:name="uklid.com.friends.provider"/>//
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.WithActionBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AddActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/add_friend_title"/>

        <activity android:name=".EditActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/edit_friend_title"/>

        <activity android:name=".SearchActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/search_friends_title"/>

        <provider
            android:authorities="uklid.com.friends.provider"
            android:name="uklid.com.friends.FriendsProvider"
            android:exported="true"
            android:readPermission="uklid.com.friends.provider.READWRITE"
            android:writePermission="uklid.com.friends.provider.READWRITE"/>
    </application>

</manifest>
